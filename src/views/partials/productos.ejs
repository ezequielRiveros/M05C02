<% for (let index = 0; index < productos.length; index++) {
    const element = productos[index];%>
    <div class="col-12 col-sm-6 col-lg-3">
    <section class="product-box">
        <a href="/product/detail/<%= element.id %>/<%= element.category %>">
            <figure class="product-box_image">
                <img src="/images/products/<%= element.image %>" alt="imagen de producto">
            </figure>
            <article class="product-box_data">
                <% let precioFinal=element.price - (element.price * element.discount / 100);
                const toThousand = n =>n.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".");
                precioFinal=toThousand(precioFinal)	
                %>
                <h2><%= precioFinal%></h2>
                <span><%= element.discount %> OFF</span>
                <p><%= element.name %></p>
                <i class="fas fa-truck"></i>
            </article>
        </a>
    </section>
</div>
<%} %> 